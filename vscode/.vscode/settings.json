{
  // autoclose-tag
  "auto-close-tag.activationOnLanguage": [
    "xml",
    "php",
    "jinja",
    "ejs",
    "javascriptreact",
    "typescriptreact",
    "markdown",
    "vue",
    "jsx",
    "HTML (Eex)"
  ],
  // material-icon
  "material-icon-theme.activeIconPack": "react_redux",
  "material-icon-theme.showWelcomeMessage": false,
  "material-icon-theme.files.associations": {
    "firebase.utils.js": "firebase",
    "firebase.js": "firebase",
    "*.selectors.js": "Redux-store",
    "*.selectors.ts": "Redux-store",
    "*.slice.js": "Redux-reducer",
    "*.slice.ts": "Redux-reducer",
    "*.sagas.js": "Redux-store",
    "*.sagas.ts": "Redux-store",
    "*.saga.js": "Redux-store",
    "*.saga.ts": "Redux-store",
    "http.js": "http",
    "api.js": "http",
    "*.hook.js": "velocity",
    "http.ts": "http",
    "api.ts": "http",
    "*.hook.ts": "velocity"
  },
  "material-icon-theme.folders.associations": {
    "selectors": "redux-store",
    "router": "routes",
    "sagas": "Redux-store",
    "use-checker": "hook",
    "use-query": "hook",
    "use-sidebar": "hook",
    "use-toasts": "hook",
    "use-validation": "hook",
    "use-modal": "hook",
    "use-trash": "hook",
    "use-toggle": "hook",
    "use-sortable-data": "hook",
    "use-auth-user": "hook",
    "use-navigation-menu": "hook",
    "use-scroll-to-hash": "hook",
    "use-scroll-to-error": "hook",
    "use-form-handlers": "hook",
    "use-object-checker": "hook",
    "use-previous-value": "hook",
    "use-loading-effect": "hook",
    "private-route": "private",
    "public-route": "public",
    "filters": "review",
    "partials": "include"
  },
  // editor
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.tslint": true,
    "source.fixAll.stylelint": true
    // "source.fixAll.prettier": true
  },
  "editor.accessibilitySupport": "off",
  "editor.codeLens": true,
  "editor.colorDecorators": true,
  "editor.dragAndDrop": false,
  "editor.fontLigatures": true,
  "editor.fontSize": 16,
  "editor.glyphMargin": true,
  "editor.minimap.enabled": false,
  "editor.rulers": [100],
  "editor.scrollBeyondLastLine": false,
  "editor.tokenColorCustomizations": {
    "textMateRules": [
      {
        "scope": [
          //following will be in italic (=FlottFlott)
          "comment",
          "entity.name.type.class", //class names
          "keyword", //import, export, return…
          // "constant", //String, Number, Boolean…, this, super
          "storage.modifier", //static keyword
          "storage.type",
          "constant.language",
          "entity.other.attribute-name",
          "variable.language"
        ],
        "settings": {
          "fontStyle": "italic"
        }
      },
      {
        "scope": [
          //following will be excluded from italics (VSCode has some defaults for italics)
          "invalid",
          "keyword.operator",
          "constant.numeric.css",
          "keyword.other.unit.px.css",
          "constant.numeric.decimal.js",
          "constant.numeric.json",
          "variable.other"
        ],
        "settings": {
          "fontStyle": ""
        }
      }
    ]
  },
  "editor.tabCompletion": "on",
  "editor.wordWrap": "on",
  "editor.wordWrapColumn": 100,
  "editor.tabSize": 2,
  "editor.showFoldingControls": "mouseover",
  "editor.folding": true,
  "editor.foldingStrategy": "indentation",
  "editor.formatOnPaste": true,
  "editor.formatOnSave": true,
  "editor.fontFamily": "Operator Mono Lig, FiraCode Nerd Font",
  "editor.renderWhitespace": "all",
  "editor.renderControlCharacters": true,
  "editor.suggestSelection": "first",
  "editor.wordBasedSuggestions": false,
  // explorer
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "extensions.ignoreRecommendations": true,
  "explorer.sortOrder": "type",
  // files
  "files.associations": {
    ".babelrc": "jsonc",
    ".eslintrc": "jsonc",
    ".stylelintrc": "jsonc",
    "*.pyi": "python",
    "*.html": "html",
    "*.styl": "stylus"
  },
  "files.trimFinalNewlines": true,
  "files.autoSave": "onFocusChange",
  "files.exclude": {
    "**/.vscode": false,
    "**/.DS_Store": true,
    "**/__pycache__": true,
    "**/.cache": true,
    "**/.idea": true,
    "**/.pytest_cache": true,
    "**/.mypy_cache": true,
    "**/.venv": true,
    "**/.coverage": true,
    "**/*.py[co]": true
  },
  // git
  "git.autofetch": false,
  "git.showInlineOpenFileAction": false,
  "git.confirmSync": false,
  // python
  "python.linting.enabled": true,
  "python.formatting.provider": "none",
  "python.pythonPath": "${workspaceFolder}/venv/bin/python3",
  "python.terminal.activateEnvironment": true,
  "python.workspaceSymbols.enabled": true,
  // telemetry
  "telemetry.enableCrashReporter": false,
  "telemetry.enableTelemetry": false,
  "terminal.integrated.enableBell": false,
  "terminal.integrated.drawBoldTextInBrightColors": false,
  "terminal.integrated.experimentalLinkProvider": false,
  "terminal.integrated.rendererType": "auto",
  // vetur
  "vetur.validation.script": false,
  "vetur.validation.style": false,
  "vetur.validation.template": false,
  "vetur.format.defaultFormatter.js": "prettier",
  "vetur.format.enable": false,
  // window
  "window.clickThroughInactive": false,
  "window.newWindowDimensions": "maximized",
  "window.zoomLevel": 0,
  // workbench / terminal styles
  "workbench.activityBar.visible": true,
  "workbench.colorCustomizations": {
    "gitDecoration.modifiedResourceForeground": "#d4cb68",
    "terminal.background": "#272727",
    "terminal.foreground": "#ebdbb2",
    "terminal.ansiBlack": "#272727",
    "terminal.ansiBlue": "#448488",
    "terminal.ansiBrightBlack": "#928373",
    "terminal.ansiBrightBlue": "#83a597",
    "terminal.ansiBrightCyan": "#8ec07b",
    "terminal.ansiBrightGreen": "#b8ba25",
    "terminal.ansiBrightMagenta": "#d3859a",
    "terminal.ansiBrightRed": "#fb4833",
    "terminal.ansiBrightWhite": "#ebdbb2",
    "terminal.ansiBrightYellow": "#fabc23",
    "terminal.ansiCyan": "#689d69",
    "terminal.ansiGreen": "#989719",
    "terminal.ansiMagenta": "#b16185",
    "terminal.ansiRed": "#cc231c",
    "terminal.ansiWhite": "#a89983",
    "terminal.ansiYellow": "#d79920",
    "terminal.selectionBackground": "#ebdbb2",
    "terminal.integrated.rightClickCopyPaste": true,
    "terminal.integrated.enableBold": true
  },
  "workbench.editor.labelFormat": "short",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.tips.enabled": false,
  "workbench.editor.highlightModifiedTabs": true,
  "workbench.colorTheme": "Gruvbox Dark (Medium)",
  // terminal
  "terminal.external.osxExec": "iTerm.app",
  "terminal.integrated.cursorBlinking": true,
  "terminal.integrated.fontFamily": "FiraCode Nerd Font",
  "terminal.integrated.fontSize": 14,
  "terminal.external.linuxExec": "gnome terminal",
  "terminal.integrated.fontWeight": "500",
  "terminal.integrated.macOptionClickForcesSelection": true,
  // interllisense
  "vsintellicode.modify.editor.suggestSelection": "automaticallyOverrodeDefaultValue",
  // javascript
  "javascript.suggestionActions.enabled": false,
  "javascript.validate.enable": false,
  "javascript.updateImportsOnFileMove.enabled": "never",
  "javascript.suggest.autoImports": false,
  "typescript.suggest.autoImports": false,
  "typescript.validate.enable": true,
  // html
  "html-css-class-completion.enableEmmetSupport": true,
  // emmet
  "emmet.triggerExpansionOnTab": true,
  "emmet.showSuggestionsAsSnippets": true,
  "emmet.showExpandedAbbreviation": "always",
  "emmet.includeLanguages": {
    "edge": "html",
    "vue-html": "html",
    "razor": "html",
    "plaintext": "jade",
    "vue": "html",
    "html": "html",
    "ejs": "html"
  },
  // eslint
  "eslint.alwaysShowStatus": true,
  // breadcrumbs
  "breadcrumbs.enabled": true,
  // clock
  "clock.dateFormat": "mmm dS yyyy, HH:MM",
  // debug
  "debug.allowBreakpointsEverywhere": true,
  "prettier.disableLanguages": [],
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[django-html]": {
    "editor.quickSuggestions": {
      "other": true,
      "comments": true,
      "strings": true
    },
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[git-commit]": {
    "editor.rulers": [100],
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[go]": {
    "editor.insertSpaces": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[makefile]": {
    "editor.insertSpaces": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": false,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[yaml]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.quickSuggestions": {
      "other": true,
      "comments": false,
      "strings": true
    },
    "editor.autoIndent": "none",
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "prettier.singleQuote": true,
  "prettier.printWidth": 100,
  "editor.minimap.maxColumn": 100,
  "todo-tree.tree.showScanModeButton": false,
  "todo-tree.highlights.enabled": true,
  "explorer.compactFolders": false,
  "editor.linkedEditing": true,
  "python.languageServer": "Microsoft",
  "vim.autoSwitchInputMethod.enable": true,
  "vim.autoSwitchInputMethod.defaultIM": "com.apple.keylayout.US",
  "vim.autoSwitchInputMethod.obtainIMCmd": "/usr/local/bin/im-select",
  "vim.autoSwitchInputMethod.switchIMCmd": "/usr/local/bin/im-select {im}",
  "vim.easymotion": true,
  "vim.highlightedyank.enable": true,
  "vim.replaceWithRegister": true,
  "editor.cursorSmoothCaretAnimation": true,
  "css.fileExtensions": ["css", "scss"],
  "terminal.integrated.allowChords": false
}
